<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_test"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:background="@drawable/bg_alt_1" >

    <RelativeLayout
        android:id="@+id/korten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/spela"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp" >

        <GridView
            android:id="@+id/gridviewTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="250dp"
            android:gravity="center_vertical"
            android:horizontalSpacing="1dp"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:scaleType="fitXY"
            android:scrollbars="vertical|none"
            android:stretchMode="none"
            android:verticalSpacing="1dp" >
        </GridView>
    </RelativeLayout>

    <VideoView
        android:id="@+id/surface_view"
        android:layout_width="1280dp"
        android:layout_height="800dp" />

    <TextView
        android:id="@+id/clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginRight="19dp"
        android:text="Clock"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#B22222"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spelare1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/clock"
        android:layout_marginRight="25dp"
        android:text="Lag 1: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#B22222"
        android:textSize="50dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/spelare2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/spelare1"
        android:layout_marginRight="25dp"
        android:text="Lag 2: "
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:textColor="#B22222"
        android:textSize="50dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="50dp"
        android:alpha="50"
        android:background="@null"
        android:maxHeight="@dimen/activity_vertical_margin"
        android:onClick="restartClick"
        android:scaleType="fitXY"
        android:src="@drawable/spela" />

    <LinearLayout
        android:id="@+id/shuffle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/imageButton2"
        android:layout_alignRight="@+id/imageButton2"
        android:orientation="vertical" >

        <ImageButton
            android:id="@+id/imageButton1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="test"
            android:src="@drawable/ic_launcher" />
    </LinearLayout>

</RelativeLayout>