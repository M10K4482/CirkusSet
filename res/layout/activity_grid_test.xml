<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/relative_test"
    android:layout_width="1280dp"
    android:layout_height="800dp"
    android:background="@drawable/bg_alt_1" >

    <RelativeLayout
        android:id="@+id/korten"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/spela"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="20dp" >

        <GridView
            android:id="@+id/gridviewTest"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="250dp"
            android:gravity="center_vertical"
            android:horizontalSpacing="1dp"
            android:listSelector="#00000000"
            android:numColumns="3"
            android:scaleType="fitXY"
            android:scrollbars="vertical|none"
            android:stretchMode="none"
            android:verticalSpacing="1dp" >
        </GridView>
    </RelativeLayout>

    <VideoView
        android:id="@+id/surface_view"
        android:layout_width="1280dp"
        android:layout_height="800dp" />

    <ImageButton
        android:id="@+id/imageButton2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="105dp"
        android:layout_marginRight="50dp"
        android:alpha="50"
        android:background="@null"
        android:maxHeight="@dimen/activity_vertical_margin"
        android:onClick="restartClick"
        android:scaleType="fitXY"
        android:src="@drawable/spela" />

    <RelativeLayout
        android:id="@+id/right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:gravity="center_horizontal" >

        <ImageView
            android:id="@+id/imageView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spelare1"
            android:src="@drawable/lag1" />
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spelare1"
            android:src="@drawable/lag1_click" />

        <TextView
            android:id="@+id/spelare1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginRight="40dp"
            android:layout_marginTop="10dp"
            android:background="@drawable/scoreboard"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#B22222"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ImageButton
        android:id="@+id/imageButton1"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginTop="150dp"
        android:layout_toLeftOf="@+id/right"
        android:background="@null"
        android:onClick="test"
        android:scaleType="fitXY"
        android:src="@drawable/shuffle" />

    <RelativeLayout
        android:id="@+id/right2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_below="@id/right" >

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spelare2"
            android:src="@drawable/lag2" />
        
        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/spelare2"
            android:src="@drawable/lag2_click" />

        <TextView
            android:id="@+id/spelare2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/scoreboard"
            android:gravity="center"
            android:text="0"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#83F52C"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/clock_stand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="540dp" >

        <TextView
            android:id="@+id/clock"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/tid"
            android:gravity="center_horizontal"
            android:text="16"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#C98D4D"
            android:textSize="40sp" />

    </RelativeLayout>

</RelativeLayout>